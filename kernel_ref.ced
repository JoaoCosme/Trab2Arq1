		TST		R0
		BNE		_shiftOff
		OR 		#h00, keyStat
		JMP		_shiftend

_shiftOff:
		AND		#h00, keyStat

_shiftend:
		MOV		keyStat,R0
		MOV		#h83,INTE
		rts		r7



